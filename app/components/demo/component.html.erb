<%= tag.div class: "w-full mb-8" do %>
  <%= render Demo::Title::Component.new(title) if show_title? %>
  <%= tag.div class: "relative border-gray-700 rounded-md border-y border-x",
              data: {
                controller: "demo",
                demo_target: "container",
                demo_active_value: tabs.first[:tab_id],
                action: "demo:console-event->demo#appendConsoleEvent"
              } do %>
    <%= tag.div class: "flex flex-col border border-gray-700 bg-gray-950 rounded-md divide-y divide-gray-700" do %>
      <%= render Demo::Tabs::Component.new(tabs: tabs) %>
      <%= render Demo::Frame::Component.new(src: tabs.first[:src]) %>
      <%= render Demo::Console::Component.new %>
    <% end %>
  <% end %>
<% end %>
