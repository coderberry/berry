<%= render Container::Component.new do %>
  <% if render_breadcrumbs? %>
    <% if breadcrumbs? %>
      <%= render breadcrumbs %>
    <% else %>
      <%= render Sitepress::Breadcrumbs::Component.new(page) %>
    <% end %>
  <% end %>

  <% if render_title? %>
    <% if title? %>
      <%= render title %>
    <% else %>
      <%= render Title::Component.new(page.title) %>
    <% end %>
  <% end %>

  <%= content %>
<% end %>
