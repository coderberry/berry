<%= tag.nav class: css("nav"), aria: { label: t(".breadcrumbs") do %>
  <%= tag.ul itemscope: true, itemtype: "https://schema.org/BreadcrumbList", class: css("ul") do %>
    <% @breadcrumbs.each_with_index do |breadcrumb, index| %>
      <%= tag.li itemscope: true, position: (index + 1), itemtype: "https://schema.org/ListItem", class: css("li") do %>
        <%= link_to breadcrumb[:path], class: css("link", { "text-slate-50": index == @breadcrumbs.size - 1 }), itemprop: "item" do %>
          <%= tag.span breadcrumb[:text], itemprop: true %>
        <% end %>
        <%= tag.meta itemprop: "position", content: (index + 1) %>
        <%= tag.span class: css("span") do %>
          <% unless index == @breadcrumbs.size - 1 %>
            <%= inline_svg_tag "chevron-right.svg", class: css("svg") %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>